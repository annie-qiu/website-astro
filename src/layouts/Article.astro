---
const { frontmatter } = Astro.props;
import "../styles/global.scss";
import SplitLayout from "./SplitLayout.astro";
---
<SplitLayout title={frontmatter.title}>
  <div class="mx-auto sm:mx-0 max-w-4xl space-y-7 mt-2 p-6 sm:p-8 md:p-10 lg:px-16">
    <div class="flex flex-col space-y-1">
      <span class="text-3xl title">{frontmatter.title}</span>
      <span class="text-sm light-text">{frontmatter.description}</span>
    </div>
    <div class="prose light-text">
      <slot/>
    </div>
  </div>
</SplitLayout>